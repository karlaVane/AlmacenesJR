{{> header}}
{{> navbar}}
<div id='separacion'></div>
<div id="barra">
    <h2><i class="fas fa-car-alt"></i> MI CARRITO </h2>
</div>
<div id="separacion"></div>
{{> mensaje}}
<div class="container p-4">
    {{#if carIds}}
    <form action="/cardata?ids={{carIds}}" method="POST">
    {{else}}
    <form action="/cardata" method="POST">
    {{/if}}
            <div class="row">
                {{#each carrito}}
                <div class="col-md-4">
                    <div class="card text-center">
                        <div class="card-body">
                            <div class="card-title" id="nombre_prod_selec">
                                <label class="card-title text uppercase">
                                    {{nombre_prod}}
                                </label>
                            </div>
                            <img src="{{imagen}}" width="100%" height="100%">
                            <p> <i class="fas fa-money-bill-alt"></i> <b>Precio: $</b>{{precio_venta}}
                                <input type="number" id="c" name="{{id_car}}" min="1" max="{{cantidad}}" value="1">
                            </p>
                            <p>
                                <a href="/delete/{{id_car}}" class="btn btn-secondary"><i class="fas fa-trash-alt"></i>
                                    Eliminar
                                    Compra</a>
                                <a href="/comprar/{{id_car}}" class="btn btn-info"><i class="fas fa-check-circle"></i>
                                    Comprar</a>
                            </p>
                        </div>
                    </div>
                </div>
                {{else}}
                <div id='separacion'></div>
                <div class="col-md-4 mx-auto">
                    <div class="card card-body text-center">
                        <p>Carrito Vac√≠o :(</p>
                        <a href="/seleccionar_pd" class="btn btn-info">Agrega Productos al Carrito</a>
                    </div>
                </div>
                {{/each}}
            </div>
            {{#if total}}
            <div class="form-group">
                <center><label>Total: {{total}} &nbsp;<i class="fas fa-money-bill-alt"
                            style="color: #160F5B;"></i></label>
                </center>
            </div>
            <center><button type="submit" class="btn btn-primary">Comprar Carrito </button></center>
            {{/if}}
        </form>
</div>
{{> footer}}