{{> header}}
{{> navbar}}
{{> mensaje}}
    <div id='separacion'></div>
    <div id="barra">
        <h2><i class="fas fa-search"></i>&nbsp ELIMINAR PRODUCTO</h2>
    </div><br>
    <div class="container">
    <div style="text-align: right;">
        <form action="/buscar_categ_eliminado" method="POST">
            Buscar por:
            <select id="inputState" name="categ_prod" required='true'>
                <option selected>Escoga una opción</option>
                <option value="1">Colchón</option>
                <option value="2">Almohadas</option>
                <option value="3">Sofá cama</option>
                <option value="4">Complementos</option>
                <option value="5">Todo</option>
            </select>
            <button type="submit" class="btn btn-info"><i class="fas fa-search"></i></button>
        </form>
    </div>
</div>
<BR>
<form action="/menu_gestionpd">
    <div class="main row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <table class="table">
                <tr>
                    <th id='tabla_cabeza'> <i class="fas fa-cart-plus"></i>       Nombre</th>
                    <th id='tabla_cabeza'><i class="fas fa-file-alt"></i>     Descripción</th>
                    <th id='tabla_cabeza'><i class="fas fa-list-ol"></i>      Cantidad</th>
                    <th id='tabla_cabeza' style="width: 100px;"><i class="fas fa-dollar-sign"></i>      Precio Venta</th>
                    <th id='tabla_cabeza' style="width: 100px;"><i class="fas fa-dollar-sign"></i>      Precio Compra</th>
                    <th id='tabla_cabeza'> <i class="fas fa-object-group"></i>        Categoría</th>
                    <th id='tabla_cabeza'><i class="fas fa-image"></i>        Imagen</th>
                    <th id='tabla_cabeza'>Eliminar</th>
                </tr>
                {{#each datos}}
                <tr>
                    <td>{{nombre_prod}}</td>
                    <td>{{descripcion}}</td>
                    <td>{{cantidad}}</td>
                    <td>${{precio_venta}}</td>
                    <td>${{precio_compra}}</td>
                    <td>{{categoria}}</td>
                    <td id="columna_imagen">
                        {{#if imagen}}
                        <img src="{{imagen}}" width="200px" height="200px"></img>
                        {{else}}
                        No tiene imagen
                        {{/if}}
                    </td>

                    <td>
                        <center><label data-toggle="modal" data-target="#preguntap{{id_prod}}" id="icono_mod"><i
                                    class="fas fa-trash-alt"></label></i>
                        </center>
                        <!-- Modal -->
                        
                        <div class="modal fade" id="preguntap{{id_prod}}"  role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Eliminar producto</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        ¿Está seguro de eliminar a {{nombre_prod}}?
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                                        <button class="btn btn-success"><a
                                                href="/eliminar_pd?id_prod={{id_prod}}&img={{id_img}}">Aceptar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                {{/each}}   
            </table>
            <div id="espaciado_boton">
            </div>
            <center>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i>&nbsp Regresar</button></center>
        </div>
        <div class="col-md-1"></div>
        <div id="espaciado_boton"></div>
    </div>
</form>
{{> footer}}