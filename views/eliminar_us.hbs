{{> header}}
{{> navbar}}
{{> mensaje}}
<form action="/menu_gestionus">
    <div id='separacion'></div>
    <div id="barra">
        <h2><i class="fas fa-search"></i>&nbsp ELIMINAR USUARIOS</h2>
    </div><br>
    <div class="container">
            <table class="table">
                <tr>
                    <th id='tabla_cabeza'><i class="fas fa-user" style="color: white;"></i>  Nombre</th>
                    <th id='tabla_cabeza'><i class="fas fa-id-card" style="color: white;"></i>    Cédula</th>
                    <th id='tabla_cabeza'><i class="fas fa-envelope" style="color: white;"></i>   Correo</th>
                    <th id='tabla_cabeza'><i class="fas fa-home" style="color:white;"></i>    Dirección</th>
                    <th id='tabla_cabeza'><i class="fa fa-mobile"style="color: white;"></i>     Teléfono</th>
                    <th id='tabla_cabeza'><i class="fas fa-toggle-on"></i>    Estado</th>
                    <th id='tabla_cabeza'><i class="fas fa-id-badge" style="color:white"></i>      Tipo</th>
                    <th id='tabla_cabeza'><i class="fas fa-image" style="color: white;"></i>    Imagen</th>
                    <th id='tabla_cabeza'>Eliminar</th>
                </tr>
                {{#if datos}}
                {{#each datos}}
                <tr>
                    <td>{{nombre}}</td>
                    <td>{{cedula}}</td>
                    <td>{{correo}}</td>
                    <td>{{direccion}}</td>
                    <td>{{telefono}}</td>
                    <td>{{#if estado}}
                        activo
                        {{else}}
                        Inactivo
                        {{/if}}
                    </td>
                    <td>{{tipo}}</td>
                    <td>
                        {{#if imagen}}
                        <img src="{{imagen}}" width="120px" height="100px"></img>
                        {{else}}
                        No tiene imagen
                        {{/if}}
                    </td>
                    <td>
                        <center><label data-toggle="modal" data-target="#pregunta{{id_usuario}}" id="icono_mod"><i
                                    class="fas fa-user-slash"></label></i>
                        </center>
                        <!-- Modal -->
                        <div class="modal fade" id="pregunta{{id_usuario}}" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Eliminar Usuario</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        ¿Está seguro de eliminar a {{nombre}}?
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                                        <button class="btn btn-success"><a
                                                href="/eliminar_usuario?id_us={{id_usuario}}&img={{id_img}}">Aceptar</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
                {{/each}}
                {{else}}
                <center>No existen datos</center>
                {{/if}}
            </table>
            <div id="espaciado_pag">
            </div>
            <center>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i>&nbsp Regresar</button></center>
       
        <div id="espaciado_pag"></div>
    </div>


</form>
{{> footer}}