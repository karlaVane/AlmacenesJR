{{> header}}
{{> navbar}}
{{> mensaje}}
<form action="/menu_gestionus">
    <div id='separacion'></div>
    <div id="barra">
        <h2><i class="fas fa-user-edit"></i>  MODIFICAR USUARIOS</h2>
    </div><br>
    <div class="container">
        <table class="table">
            <tr>
                <th id='tabla_cabeza'><i class="fas fa-user" style="color: white;"></i> Nombre</th>
                <th id='tabla_cabeza'><i class="fas fa-id-card" style="color: white;"></i> Cédula</th>
                <th id='tabla_cabeza'><i class="fas fa-envelope" style="color: white;"></i> Correo </th>
                <th id='tabla_cabeza'><i class="fas fa-home" style="color:white;"></i> Dirección</th>
                <th id='tabla_cabeza'><i class="fa fa-mobile" style="color: white;"></i> Teléfono</th>
                <th id='tabla_cabeza'><i class="fas fa-toggle-on"></i> Estado</th>
                <th id='tabla_cabeza'><i class="fas fa-id-badge" style="color:white"></i> Tipo</th>
                <th id='tabla_cabeza'><i class="fas fa-image" style="color: white;"></i> Imagen</th>
                <th id='tabla_cabeza'>Modificar</th>
            </tr>
            {{#each datos}}
            <tr>
                <td>{{nombre}}</td>
                <td>{{cedula}}</td>
                <td>{{correo}}</td>
                <td>{{direccion}}</td>
                <td>{{telefono}}</td>
                <td>{{#if estado}}
                    activo
                    {{else}}
                    Inactivo
                    {{/if}}
                </td>
                <td>{{tipo}}</td>
                <td>
                    {{#if imagen}}
                    <center>
                        <img src="{{imagen}}" width="100px" height="100px"></img>
                    </center>
                    {{else}}
                    No tiene imagen
                    {{/if}}
                </td>
                <td>
                    <center><a href="/editar_datosUs?ci={{cedula}}" id='icono_mod'><i class="fas fa-edit"></a></i>
                    </center>
                </td>
            </tr>
            {{/each}}
        </table>
        <div id="espaciado_boton"></div>
        <center>
            <button type="submit" class="btn btn-primary"><i class="fas fa-arrow-left"></i>&nbsp Regresar</button>
        </center>
        <div id="espaciado_boton"></div>
    </div>
</form>
{{> footer}}