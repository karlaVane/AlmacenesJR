{{> header}}
{{> navbar}}
<div id='separacion'></div>
<div id="seleccion_pd"><img src="https://res.cloudinary.com/seguvega/image/upload/v1594788816/logochaide_opwyck.png"
        height="70"> Sueña con un mundo mejor...</div>
{{> mensaje}}
{{#if data}}
<div class="container p-4" id="productos">
    <center style="font-size: x-large; color:darkblue">Tu Imagen ingresada pertenece a la Categoría: {{categ}}
        <br><b>Productos Similares:</b>
    </center>
    <hr>
    <form action="/prodCarrito" method="POST">
        <div class="row">
            <div class="card-columns">
                {{#each data}}
                <div class="card">
                    <center>
                        <div class="card-title" id="nombre_prod_selec">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="check{{id_prod}}"
                                    value="{{id_prod}}">
                                <label class="form-check-label" for="gridCheck1">
                                    {{nombre_prod}}
                                </label>
                            </div>
                        </div>
                    </center>
                    <img src="{{imagen}}" class="card-img-top" width="100%" height="200">
                    <div class="card-body">
                        <center>
                            <button class="btn btn-info" type="button" data-toggle="collapse"
                                data-target="#{{palabra nombre_prod}}" aria-expanded="false"
                                aria-controls="collapseExample">
                                Mostrar descripcion
                            </button>
                            <div class="collapse" id="{{palabra nombre_prod}}">
                                <p class="card-text" style="text-align: justify;">{{descripcion}}</p>
                            </div>
                        </center>
                    </div>
                    <div class="card-footer">
                        <center>
                            <i class="fas fa-hand-holding-usd"></i> <b>Precio:
                            </b>${{precio_venta}}</td>
                        </center>
                    </div>

                </div>
                {{/each}}
            </div>
        </div>
        <div id="espaciado_boton"></div>
        <center>
            <button type="submit" class="btn btn-primary" id="btn_añadir">Añadir <i
                    class="fas fa-cart-arrow-down"></i></button>
        </center>

    </form>
</div>
{{else}}
<center>
    <label style="font-size: x-large; color:brown">No Hay productos <br> Con Categoria {{categ}}</label>
    <img src='images/triste.jpg'>
    <div id="espaciado_boton"></div>
    <button type="submit" class="btn btn-primary"><a href="/consultar_img">
            <i class="fas fa-arrow-left"></i> Regresar</button></a>
</center>
<div id="espaciado_boton"></div>
{{/if}}

{{> footer}}