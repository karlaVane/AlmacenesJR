{{> header}}
{{> navbar_cs}}
<div id='separacion'></div>
<div id="barra">Almacenes JR. Distribuidor autorizado</div>
<div id="barra_promociones">
    <div class="main row">
        <div class="col-md-6">
            Promociones
        </div>
        <div class="col-md-6">
            {{> carousel}}
        </div>
    </div>
</div>
<div id="barra_productos">
    <div class="main row">
        <div class="col-md-3">
            Colchones
        </div>
        <div class="col-md-3">
            Almohadas
        </div>
        <div class="col-md-3">
            Sof√°s Camas
        </div>
        <div class="col-md-3">
            complementos
        </div>
    </div>
</div>
<div class="container p-4" id="productos">
    <div class="row">
        <div class="card-columns">
            {{#each datos}}
            <div class="card">
                <center><div class="card-title" id="nombre_prod">{{nombre_prod}}</div></center>
                <img src="{{imagen}}" class="card-img-top">
                <div class="card-body">
                    <button class="btn btn-info" type="button" data-toggle="collapse" data-target="#collapseExample"
                        aria-expanded="false" aria-controls="collapseExample">
                        Mostrar descripcion
                    </button>
                    <div class="collapse" id="collapseExample">
                        <p class="card-text">{{descripcion}}</p>
                    </div>

                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
</div>

{{> footer}}