            </ul>
            A los mejores precios!
        </div>
        <div class="col-md-6">
            {{> carousel}}
        </div>
    </div>
</div>
<div id="barra_productos">
    <div class="main row">
        <div class="col-md-3">
           <a href="/?id={{colchon}}">Colchones </a>
        </div>
        <div class="col-md-3">
           <a href="/?id={{almohada}}"> Almohadas</a>
        </div>
        <div class="col-md-3">
            <a href="/?id={{sofa}}">Sof√°s Camas </a> 
        </div>
        <div class="col-md-3">
            <a href="/id/?id={{complementos}}"> complementos </a>
        </div>
    </div>
</div>
<div class="container p-4" id="productos">
    <div class="row">
        <div class="card-columns">
            {{#each datos}}
            <div class="card">
                <center><div class="card-title" id="nombre_prod">{{nombre_prod}}</div></center>
                <img src="{{imagen}}" class="card-img-top" width="100%" height="325">
                <div class="card-body">
                    <button class="btn btn-info" type="button" data-toggle="collapse" data-target="#{{palabra nombre_prod}}"
                        aria-expanded="false" aria-controls="collapseExample">
                        Mostrar descripcion
                    </button>
                    <div class="collapse" id="{{palabra nombre_prod}}">
                        <p class="card-text">{{descripcion}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
