{{> header}}
{{> navbar}}
<div id='separacion'></div>
<div class="container">
    {{> mensaje}}
    <br><br>
    <div class="main row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <table class="table" border="2">
                <tr>
                    <td id="encabezadoT"><i class="fas fa-user"></i>&nbsp Registrarse</td>
                </tr>
                <tr>
                    <td>
                        <br>
                        <div class="container">
                            <form method="POST" action="/registrarse">
                                <div class="form-group">
                                    <label>Ingrese el nombre de Usuario &nbsp <i class="fas fa-user"
                                            style="color: #160F5B;"></i></label>
                                    <input type="text" class="form-control" id="nombre" name="nombre"
                                        aria-describedby="emailHelp" placeholder="Nombre" required='true'>
                                </div>
                                <div class="form-group">
                                    <label>Ingrese la cédula &nbsp <i class="fas fa-id-card"
                                            style="color: #160F5B;"></i></label>
                                    <input type="text" class="form-control" id="cedula" name="cedula"
                                        placeholder="Cédula" required='true'>
                                </div>
                                <div class="form-group">
                                    <label>Ingrese el correo electrónico &nbsp <i class="fas fa-envelope"
                                            style="color: #160F5B;"></i></label>
                                    <input type="email" class="form-control" id="email" name="correo"
                                        aria-describedby="emailHelp" placeholder="ejemplo@hotmail.com" required='true'>
                                </div>
                                <div class="form-group">
                                    <label>Ingrese la contraseña &nbsp<i class="fas fa-key"
                                            style="color:#160F5B;"></i></label>
                                    <input type="password" class="form-control" id="pwd1" name="passw" required='true'
                                        placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <label>Ingrese el Numero de teléfono &nbsp <i class="fa fa-mobile"
                                            style="color: #160F5B;"></i></label>
                                    <input type="tel" class="form-control" id="telf" name="telf"
                                        aria-describedby="emailHelp" placeholder="Número teléfono" required='true' maxlength="10" >
                                </div>
                                <div class="form-group">
                                    <label>Ingrese Direccion &nbsp <i class="fas fa-home"
                                            style="color: #160F5B;"></i></label>
                                    <input type="text" class="form-control" id="dir" name="dir"
                                        aria-describedby="emailHelp" placeholder="Dirección" required='true'>
                                </div>
                                <center>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-envelope"></i>&nbsp Enviar</button></center>
                                <br>
                            </form>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-3">
        </div>
    </div>
</div>
<br>
{{> footer}}